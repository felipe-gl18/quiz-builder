{
  "compilerOptions": {
    "target": "ESNext",                                 
    "module": "NodeNext",                               
    "moduleResolution": "nodenext",                    
    "typeRoots": ["./node_modules/@types", "./src/types"],                               
    "resolveJsonModule": true,                       
    "outDir": "./dist",  
    "rootDir": "./src",                
    "isolatedModules": true,                         
    "allowSyntheticDefaultImports": true,            
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                    
    "skipLibCheck": true,
    "allowJs": true,
  },
  "exclude": [
    "dist",
    "generated"
  ],
  "include": ["src"]
}
